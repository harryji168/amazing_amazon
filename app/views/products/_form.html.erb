<% if @product.errors.any? %>
    <ul>
        <% @product.errors.full_messages.each do |msg|%>
            <li><%= msg %></li>
        <% end%>
    </ul>
<% end%>
<%= form_with(model: @product) do |form|%>

<div class="form-group">
    <%= form.label :title%>
    <br>
    <%= form.text_field :title ,class:"form-text" , autofocus: true   %>
</div>
<div class="form-group">
    <%= form.label :description %>
    <br>
    <%= form.text_area :description, cols: 50, rows: 5 ,class:"form-text" %>
</div>

<div class="form-group">
    <%= form.label :price %>
    <br>
    <%= form.text_field :price ,class:"form-text"   %>
</div>

<div class="form-group">
    <%= form.collection_check_boxes :tag_ids, Tag.order(name: :asc), :id, :name do |b| %>
        <div class="tag-wrapper">
        <%= b.check_box %>
        <%= b.text.humanize %>
        </div>
    <% end %>
</div>

<%= form.submit %>

<% end%>