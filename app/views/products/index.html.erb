<h1>
    products   <a href="/products/new">New</a>
</h1>

<% if @tag.present? %>
  <h6>
    Showing products tagged by
    <span class="badge badge-pill badge-primary">
      <%= @tag.name %>
    </span>
  </h6>
<% end %>

<% @products.each do |product|%>
    <div>
        <h3>
 
        <h2><%= link_to(product.title, product_path(product.id)) %></h2>
        </h3>
        <p>
        <%= product.description%>
        </p>
        <p>
        <%= product.price %>
        </p>
    </div>
<% end %>