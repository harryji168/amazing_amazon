<!DOCTYPE html>
<html>
  <head>
    <title>Amazon</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <%= flash[:notice] || flash[:alert] %>
    
     <nav>
        <%=  link_to  'Home', root_path  %>
        |
        <%=  link_to  'Products', products_path  %> 
        |
        <%=  link_to  'New Product', new_product_path  %>
        |
        <%=  link_to  'Sign Up', new_user_path  %>
        |
         <% if user_signed_in? %>
          Hello <%= current_user.first_name %>
          <%= link_to "Logout", session_path, method: :delete, data: {confirm: "Are you sure you want to logout?"} %>
        <% else %>
        <%=  link_to  'Log in', new_session_path  %>
          | 
        <% end %>
        </nav>

     <% if flash[:notice].present?%>
        <div class="alert alert-success aler-dismissible fade show" role="alert">
          <%= flash[:notice]%>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">
            &times;
          </span>
          </button>
        </div>
    <% elsif flash[:alert].present?%>
      <div class="alert alert-danger aler-dismissible fade show" role="alert">
          <%= flash[:alert]%>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">
            &times;
          </span>
          </button>
        </div>
    <% end %>
         
         <%= yield %>
  </body>
</html>
